<div class="l-sidebar{{ has_multiple_sidebar ? ' l-sidebar--multi-2' }} {{ modifier_classes }}">

  {% if has_header %}
    <div class="l-sidebar__full">
      {% block sidebar_header %}
        <p style="background:#333;color:#fff;padding:1em; margin:0;">Header</p>
      {% endblock %}
    </div>
  {% endif %}

   {% if has_multiple_sidebar %}
    <aside class="l-sidebar__sidebar">
      {% block sidebar_minor %}
        <p style="background:#333;color:#fff;padding:1em; margin:0;">Sidebar Minor</p>
      {% endblock %}
    </aside>
  {% endif %}

    <div class="l-sidebar__main">
       {% block sidebar_main_content %}
        <p style="background:#333;color:#fff;padding:1em; margin:0;">Main Content</p>
       {% endblock %}
    </div>

    <aside class="l-sidebar__sidebar">
      {% block sidebar_aside %}
        <p style="background:#333;color:#fff;padding:1em; margin:0;">Sidebar</p>
      {% endblock %}
    </aside>

</div>
