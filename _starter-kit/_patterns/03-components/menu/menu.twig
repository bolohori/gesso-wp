<ul class="menu menu--{{menu_name}}">
  {% for item in items %}
    <li class="menu__item {{ item.classes|join(' ') }}">
      <a class="menu__link" href="{{ item.link }}">{{ item.title }}</a>
      {% if item.children %}
        <ul class="menu__subnav">
          {% for child in item.children %}
            <li class="menu__item">
              <a class="menu__link" href="{{ child.link }}">{{ child.title }}</a>
            </li>
          {% endfor %}
        </ul>
      {% endif %}
    </li>
  {% endfor %}
</ul>