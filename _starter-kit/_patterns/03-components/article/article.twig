{% if not classes %}
  {% set classes = [] %}
{% endif %}
{% set classes =
  classes|merge(['article'])|join(' ')|trim
%}

<article class="{{ classes }}" {% if wp_id %} id="{{ wp_id }}"{% endif %}role="article">
  {% block title %}
    {{ title|raw }}
  {% endblock %}

  {% if has_footer %}
    <footer>
      {% block footer %}
        {{ footer|raw }}
      {% endblock %}
    </footer>
  {% endif %}

  {% block main %}
    {{ content|raw }}
  {% endblock %}
  {% block comments %}
    {# used by WordPress #}
  {% endblock %}
</article>
